<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.palace.bowling_prj_dao.IDao">
	<select id="loginDao" resultType="com.palace.bowling_prj_dto.MemberDto">
		SELECT * FROM LOGIN
	</select>
	<select id="teamListDao" resultType="com.palace.bowling_prj_dto.RepositoryDto">
		SELECT TEAMNAME,TEAMNO FROM TEAM
	</select>
	<select id="modifyMemberSize" resultType="com.palace.bowling_prj_dto.RepositoryDto">
		SELECT * FROM MEMBERSIZE WHERE USERNO = #{PARAM1}
	</select>
	<select id="sizeView" resultType="com.palace.bowling_prj_dto.RepositoryDto">
		SELECT USERNO,USERNAME,PHONE,RFSIZE,MFSIZE,REG_DATE,TEAMNAME,TEAM_TEAMNO FROM MEMBERSIZE AS A INNER JOIN TEAM AS B ON A.TEAM_TEAMNO = B.TEAMNO WHERE USERNO = #{PARAM1};
	</select>
	<select id="userSearch" resultType="com.palace.bowling_prj_dto.RepositoryDto">
		SELECT * FROM MEMBERSIZE WHERE USERNAME LIKE CONCAT('%',#{S_Val1},'%');
	</select>
	<select id="selectCount" resultType="int">
		SELECT COUNT(USERNO) FROM MEMBERSIZE;
	</select>
	
	<insert id="makeTeam">
		INSERT INTO TEAM (TEAMNAME) VALUES (#{PARAM1})
	</insert>
	<insert id="sizeWrite">
		INSERT INTO MEMBERSIZE (TEAM_TEAMNO, USERNAME, PHONE, RFSIZE, MFSIZE, REG_DATE) VALUES (#{Val1}, #{Val2}, #{Val3}, #{Val4}, #{Val5}, NOW())
	</insert>
	<update id="modifyMemberSizeSave">
		UPDATE MEMBERSIZE SET TEAM_TEAMNO=#{M_Val1},USERNAME=#{M_Val2},PHONE=#{M_Val3},RFSIZE=#{M_Val4},MFSIZE=#{M_Val5},REG_DATE=NOW() WHERE USERNO=#{M_Val6}
	</update>
	
	
	<delete id="deleteTeam" statementType="CALLABLE">
		{
			CALL DELETETEAM(#{PARAM1})
		}
	</delete>
	<delete id="deleteMemberSize" statementType="CALLABLE">
		{
			CALL DELETEMEMBERSIZE(#{PARAM1})
		}
	</delete>
	
	
</mapper>
